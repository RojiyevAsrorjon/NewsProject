<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="6dp"
    android:paddingVertical="3dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ABC News (UI)"
                android:textSize="20sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textStyle="bold"
                android:id="@+id/sourceName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/roundedImage"
                app:layout_constraintBottom_toBottomOf="@id/roundedImage"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.11"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_circle"
                android:id="@+id/roundedImage"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/roundedImage"
                app:layout_constraintBottom_toBottomOf="@id/roundedImage"
                app:layout_constraintLeft_toLeftOf="@id/roundedImage"
                android:src="@drawable/ic_bookmark"
                android:id="@+id/favouriteButton"
                android:background="?android:selectableItemBackgroundBorderless"
                app:layout_constraintRight_toRightOf="@id/roundedImage" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/roundedImage"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:justificationMode="inter_word"
                android:id="@+id/definitionSource"
                android:text="ash kjahsd kahsdjk haskjd hakjdsh ajksdh ajkhd jkashdkjahd jkahsd kjahsdk jhajsdk hasjkd hasda jsdkj ahsdjk ahsdjk ahjskd hakjsd" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>