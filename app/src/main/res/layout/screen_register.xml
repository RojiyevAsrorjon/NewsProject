<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="24sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:id="@+id/registerText"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:hint="UserName"
        android:id="@+id/usernameEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.4"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:hint="Login"
        android:id="@+id/loginEdit"
        app:layout_constraintTop_toBottomOf="@id/usernameEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.4"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:hint="@string/password_min_length_6_hint"
        android:id="@+id/passwordEdit"
        app:layout_constraintTop_toBottomOf="@id/loginEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.5"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:hint="Confirm password"
        android:id="@+id/conPasswordEdit"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/passwordEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#000"
        app:layout_constraintVertical_bias="0.6"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/alreadyButton"
        app:layout_constraintTop_toBottomOf="@id/conPasswordEdit"
        app:layout_constraintVertical_bias="0.9"
        android:id="@+id/registerButton"
        android:text="Register"
        android:background="@drawable/button_state"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ro`yxatdan o`tganman"
        app:layout_constraintRight_toLeftOf="@id/registerButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/alreadyButton"
        app:layout_constraintTop_toTopOf="@id/registerButton"
        app:layout_constraintBottom_toBottomOf="@id/registerButton"
        android:textColor="#000"/>

</androidx.constraintlayout.widget.ConstraintLayout>